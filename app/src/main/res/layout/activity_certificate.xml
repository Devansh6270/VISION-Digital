<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CertificateActivity">

    <RelativeLayout
        android:id="@+id/dashboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:background="@drawable/toolbar_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:elevation="8dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/round_shape"
            android:src="@drawable/back_btn_new"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            />
    </RelativeLayout>



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/no_data_found"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/dashboardToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/noCertificateTxt"
        style="@style/SpaceGroteskLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="No Certificate available"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboardToolbar">

    </TextView>

    <TextView
        android:id="@+id/yourcertificateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SpaceGroteskBold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/dashboardToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textColor="@color/black"
        android:text="Your Certificates">

    </TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclarViewCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/yourcertificateTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>