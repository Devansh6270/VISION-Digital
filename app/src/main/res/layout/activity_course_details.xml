<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pagebackgroundblue"
    tools:context=".activities.CourseDetailsActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/analytics_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/analysis"
        app:rippleColor="@color/themeBlue"
        android:backgroundTint="@color/themeBlue"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <RelativeLayout
        android:id="@+id/dashboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:background="@drawable/toolbar_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:elevation="8dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back_ios_24"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/sharButtonCourseDetail"
            android:elevation="8dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/round_shape"
            android:src="@drawable/ic_share"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
           />

    </RelativeLayout>



    <!--    <ImageView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:scaleType="fitXY"-->
    <!--        android:src="@drawable/registration_background" />-->

    <RelativeLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboardToolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="@dimen/dimen_8dp"
            app:cardCornerRadius="@dimen/dimen_16dp">

           <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/previewVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"

                app:use_controller="false">

                <RelativeLayout
                    android:id="@+id/videoController"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/playBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:alpha=".5"
                        android:src="@drawable/ic_play_arrow_white_24dp" />

                    <ImageView
                        android:id="@+id/pauseBtn"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_centerInParent="true"
                        android:alpha=".5"
                        android:src="@drawable/ic_pause_black_24dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/fullScreenBtn"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="160dp"
                        android:layout_marginRight="8sp"
                        android:src="@drawable/ic_fullscreen_white_24dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </com.google.android.exoplayer2.ui.PlayerView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoContainer"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:id="@+id/layoutModule1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/courseName"
                        style="@style/Nohemi_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Name"
                        android:textColor="#393E59"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RatingBar
                            style="@android:style/Widget.Holo.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/dimen_8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:visibility="gone"
                            android:backgroundTint="#AFB243"
                            android:scrollbarSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:background="#1893C5"
                            android:textSize="10sp"
                            android:visibility="gone"
                            android:layout_margin="4dp"
                            android:textColor="#FFFFFF"
                            android:text="ENGLISH"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:padding="2dp"
                            android:textSize="10sp"
                            android:layout_margin="4dp"
                            android:textColor="#393E59"
                            android:text="PUSH"/>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SpaceGroteskLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/dimen_8dp"
                            android:textColor="#393E59"
                            android:visibility="gone"
                            android:layout_marginLeft="8sp"

                            android:text="Rating" />

                        <RatingBar
                            style="@android:style/Widget.Holo.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/dimen_8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:visibility="gone"
                            android:backgroundTint="#AFB243"
                            android:scrollbarSize="18dp" />



                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:gravity="end">

                            <ImageView
                                android:id="@+id/shareBtn"
                                android:layout_width="36dp"
                                android:layout_height="38dp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:paddingTop="5dp"
                                android:src="@drawable/share"
                                app:tint="@color/colorPrimary" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/Nohemi_Light"
                        android:id="@+id/course_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16sp"
                        android:maxLines="3"
                        android:text="@string/show_more"
                        />
                    <TextView
                        style="@style/Nohemi_Medium"
                        android:id="@+id/readMoreLess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="...Read More"
                        android:textSize="14sp"
                        android:textColor="#555454"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="-12dp"
                        android:gravity="end">

                    </TextView>

<!--                    <TextView-->
<!--                        android:id="@+id/course_des"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_margin="16sp"-->
<!--                        android:fontFamily="@font/space_grotesk_light"-->
<!--                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic." />-->




                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="2">


                <TextView
                    style="@style/Nohemi_Regular"
                    android:id="@+id/watchNowBtn"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="Watch Now"
                    android:textColor="#fff" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/subscribeBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        style="@style/Nohemi_Regular"
                        android:id="@+id/subscribeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Subscribe"
                        android:textColor="#fff"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <TextView
                style="@style/Nohemi_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="16sp"
                android:textColor="#393E59"
                android:text="CONTENT:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chaptersList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:padding="@dimen/dimen_2dp"
                android:background="@drawable/edt_background_border"
                tools:listitem="@layout/item_chapter"
                android:layout_marginTop="8sp"
                android:layout_marginRight="18dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/communityBtn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="ADDA"
            android:textColor="#fff" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inviteBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">



<!--            <TextView-->
<!--                android:id="@+id/analyticsBtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="37dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/button_background"-->
<!--                android:gravity="center"-->
<!--                android:paddingLeft="16dp"-->
<!--                android:paddingTop="8dp"-->
<!--                android:paddingRight="16dp"-->
<!--                android:paddingBottom="8dp"-->
<!--                android:text="Analytics"-->
<!--                android:textColor="#fff"-->
<!--                android:visibility="visible"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

