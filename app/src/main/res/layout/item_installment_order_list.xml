<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dimen_8dp"
    app:cardElevation="@dimen/dimen_8dp"
    app:cardCornerRadius="@dimen/dimen_12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            tools:text="ODRE3223"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/grey_light"
            android:layout_marginEnd="@dimen/dimen_22dp"/>

        <View
            android:id="@+id/viewBelowOrderId"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_22dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:background="@color/white"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderId"/>

        <TextView
            android:id="@+id/tvPaid"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_height="wrap_content"
            android:text="Paid Date:"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_22dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/viewBelowOrderId"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvPaidDate"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_height="wrap_content"
            tools:text="2023-12-12"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dimen_22dp"
            android:textColor="@color/grey_light"
            app:layout_constraintTop_toBottomOf="@id/viewBelowOrderId"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_height="wrap_content"
            android:text="Payment Type:"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_22dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvPaid"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvPaymentType"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_height="wrap_content"
            tools:text="Offline"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dimen_22dp"
            android:textColor="@color/grey_light"
            app:layout_constraintTop_toBottomOf="@id/tvPaidDate"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAmount"
            android:padding="@dimen/dimen_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_vision"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="Amount: 250 Rs"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPaymentType"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>