<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".community.GroupStudyVideoPlayerActivity">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/mileStoneVideoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:clickable="true"
        android:keepScreenOn="true"
        app:bar_height="2dp"
        app:controller_layout_id="@layout/expo_player_layout"
        app:fastforward_increment="10000"
        app:played_color="@color/colorAccent"
        app:rewind_increment="10000"
        app:scrubber_color="@color/colorAccent"
        app:show_buffering="always"
        app:use_controller="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/live_chat_layout"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_margin="0.5dp"
            android:visibility="visible"
            android:background="@drawable/white_curve_background">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/appBarLayout"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_18sp"
                            style="@style/PoppinsSemiBold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/live_chat_close"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_close_black_24dp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimaryDark" />


                        <ImageView
                            android:id="@+id/mic_control"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:clickable="true"
                            android:src="@drawable/ic_person_black_24dp"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            app:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/students_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_14dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            style="@style/PoppinsRegular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/mic_control"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:id="@+id/linearSmsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/chat_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="35dp" />


                        </LinearLayout>
                    </ScrollView>


                    <ImageView
                        android:id="@+id/chat_send_image_close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_close_black_24dp"
                        android:visibility="gone"
                        app:tint="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/chat_send_image"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/nobita"
                        android:visibility="gone" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="2dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="7dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/edtTxtReplyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:background="#EA8888" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/edtTxtReplyUser"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:text="Devashish"
                                        style="@style/PoppinsRegular"
                                        android:textColor="#EA8888"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/chat_reply_cancel_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:src="@drawable/ic_close_black_24dp" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <TextView
                                    android:id="@+id/edtTxtReply"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    style="@style/PoppinsRegular"
                                    android:text="Hello, how are you?"
                                    android:textSize="12sp" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <!--            <androidx.cardview.widget.CardView-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_marginLeft="2dp"-->
                        <!--                android:layout_marginRight="2dp"-->
                        <!--                android:layout_marginBottom="2dp"-->
                        <!--                android:layout_weight="1"-->
                        <!--                android:background="@drawable/chat_edittext_background"-->
                        <!--                app:cardCornerRadius="16dp">-->

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/chat_edittext_background"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/btnPlus"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:src="@drawable/ic_chat_plus" />


                            <EditText
                                android:id="@+id/edtTxtSms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="2"
                                android:background="@null"
                                android:hint="Write a message..."
                                android:maxLines="5"
                                android:padding="10dp"
                                android:textSize="12dp" />


<!--                            <ImageView-->
<!--                                android:id="@+id/btndoubtSms"-->
<!--                                android:layout_width="26dp"-->
<!--                                android:layout_height="26dp"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:layout_weight="1"-->
<!--                                android:backgroundTint="@color/white"-->
<!--                                android:padding="2dp"-->
<!--                                android:src="@drawable/ic_doubt_icon_"-->
<!--                                app:tint="@color/colorPrimary" />-->

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0">

                                <ImageView
                                    android:id="@+id/micBtn"
                                    android:layout_width="30sp"
                                    android:layout_height="40sp"
                                    android:src="@drawable/ic_mic_on"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:id="@+id/micOffBtn"
                                    android:layout_width="30sp"
                                    android:layout_height="40sp"
                                    android:src="@drawable/ic_mic_off"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>




                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <!--        </androidx.cardview.widget.CardView>-->


                        <TextView
                            android:id="@+id/btnSendSms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:text="Send"
                            style="@style/PoppinsMedium"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:visibility="visible" />

                    </LinearLayout>


                    <!--        </LinearLayout>-->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachment_file_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/edtTxtReplyLayout"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="60dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="NotSibling">

                    <ImageView
                        android:id="@+id/chat_camera_live"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_camera_icon" />

                    <ImageView
                        android:id="@+id/chat_gallery_live"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_gallery_icon" />

                    <ImageView
                        android:id="@+id/chat_doc_live"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_group_91" />


                    <ImageView
                        android:id="@+id/chat_mic_live"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mic_on"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/chat_mic_off"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_mic_off"
                        android:visibility="gone" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/choose_admin_card"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="50dp"
            android:background="@color/grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="16sp"
            android:visibility="gone"
            android:backgroundTint="#E3DEDE"
            app:cardCornerRadius="@dimen/dimen_6dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/close_choose_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_close_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimary" />


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_24dp"
                    app:layout_constraintBottom_toTopOf="@+id/choose_admin_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chooseAdminList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.core.widget.NestedScrollView>


                <Button
                    android:id="@+id/choose_admin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/button_background"
                    android:padding="6dp"
                    android:text="Set admin"
                    android:textAllCaps="false"
                    style="@style/PoppinsRegular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mic_card"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:gravity="end"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="end"
            android:padding="16sp"
            android:elevation="@dimen/dimen_4dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/dimen_6dp">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/close_mic_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_close_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimary" />


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/micUserList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.core.widget.NestedScrollView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </com.google.android.exoplayer2.ui.PlayerView>

    <RelativeLayout
        android:id="@+id/videoController"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linear_lay_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60000000"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/back_button" />


            <TextView
                android:id="@+id/topicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="6sp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:maxLines="2"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="32sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_margin="16sp"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:visibility="gone" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/innerMileStoneList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:padding="16sp"
        android:visibility="visible" />








    <androidx.cardview.widget.CardView
        android:id="@+id/messageBtnCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="104dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="26dp"
        android:visibility="visible"
        app:cardBackgroundColor="#80ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:background="@drawable/live_group_show"
            >
            <ImageView
                android:id="@+id/messageBtn"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/ic_baseline_circle_24"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/messagePerson"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person_icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/students_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10"
                android:layout_margin="2dp"
                android:paddingTop="@dimen/dimen_3dp"
                android:gravity="center"
                style="@style/PoppinsRegular"
                android:layout_gravity="center"
                android:textSize="@dimen/dimen_16dp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/membersBtn"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="134dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_group_24"
        app:tint="@color/colorPrimary" />


</RelativeLayout>