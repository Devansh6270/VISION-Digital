<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="198dp"
    android:layout_height="120dp"
    android:paddingLeft="8dp"
    android:paddingTop="2dp"
    android:id="@+id/itemLiveClass"
    app:cardCornerRadius="8dp"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:elevation="@dimen/dimen_3dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/verticleCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/live_test_card_blue_background"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        app:cardCornerRadius="24dp">

                        <ImageView
                            android:id="@+id/testImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/button_background"
                            android:src="@drawable/ic_person_black_24dp"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/testTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="2dp"
                        android:text="NEET Syllabus 2020 -MATHS"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:lineHeight="@dimen/dimen_18dp"
                        android:minLines="2"
                        android:textAllCaps="true"
                        android:maxLines="2"
                        style="@style/Nohemi_Bold" />


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/instituteName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chalksnboard"
                            android:maxLines="1"
                            android:layout_marginTop="@dimen/dimen_6dp"
                            android:textSize="11dp"
                            android:layout_marginLeft="12dp"
                            style="@style/Nohemi_Regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration- 00:50 Hrs"
                            android:maxLines="1"
                            android:visibility="visible"
                            android:textSize="9dp"
                            android:layout_marginLeft="12dp"
                            style="@style/Nohemi_Regular"
                            android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/startButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="start"
                            android:maxLines="1"
                            android:visibility="visible"
                            android:textSize="9dp"
                            android:layout_marginLeft="12dp"
                            style="@style/Nohemi_Regular"
                            android:textColor="@color/white" />
                        <ProgressBar
                            android:id="@+id/progressDone"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginRight="@dimen/dimen_6dp"
                            android:layout_marginLeft="@dimen/dimen_6dp"
                            android:progress="62"
                            android:visibility="gone"
                            android:progressDrawable="@drawable/custom_progress_bar_testseries" />


                    </LinearLayout>


                    <!--                    <androidx.cardview.widget.CardView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        app:cardCornerRadius="@dimen/dimen_10dp"-->
                    <!--                        android:layout_marginBottom="2dp"-->
                    <!--                        android:layout_marginTop="@dimen/dimen_1dp"-->
                    <!--                        android:layout_marginLeft="2dp"-->
                    <!--                        android:layout_marginRight="@dimen/dimen_8dp"-->
                    <!--                        android:outlineAmbientShadowColor="#006DD9"-->
                    <!--                        android:outlineSpotShadowColor="#006DD9">-->

                    <!--                        <TextView-->
                    <!--                            android:id="@+id/startBtn"-->
                    <!--                            android:layout_width="46dp"-->
                    <!--                            android:layout_height="@dimen/dimen_18dp"-->
                    <!--                            android:text="START"-->
                    <!--                            android:maxLines="1"-->
                    <!--                            android:gravity="center"-->
                    <!--                            android:textSize="8dp"-->
                    <!--                            android:textColor="#006DD9" />-->
                    <!--                    </androidx.cardview.widget.CardView>-->



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>