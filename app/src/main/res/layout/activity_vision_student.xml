<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_clip_path_group"
        tools:context=".signUp.VisionStudentActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E6FFF212">

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="700dp"-->
<!--                android:layout_marginStart="30dp"-->
<!--                android:layout_marginEnd="30dp"-->
<!--                android:src="@drawable/icon_irctc" />-->


            <ImageView
                android:id="@+id/backBtn"
                android:elevation="8dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back_ios_24"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp" />



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="36dp"
                        android:src="@drawable/vision_logo"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioGroup
                            android:id="@+id/operationRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:checkedButton="@+id/visionStudent"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/visionStudent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:text="Vision Student"
                                android:checked="false"
                                style="@style/Nohemi_Medium"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/otherStudent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="10dp"
                                android:checked="false"
                                android:text="Other"
                                style="@style/Nohemi_Medium"
                                android:textColor="#515151"
                                android:textSize="14sp" />


                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/otherStudentLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <EditText
                                style="@style/Nohemi_Regular"
                                android:id="@+id/otherName"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:padding="@dimen/dimen_12dp"
                                android:textSize="@dimen/dimen_12dp"
                                android:background="@drawable/edt_background_border"
                                android:inputType="text"
                                android:hint="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/visionStudentLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:orientation="vertical">
                            <EditText
                                style="@style/Nohemi_Regular"
                                android:id="@+id/visionStudentName"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:padding="@dimen/dimen_12dp"
                                android:textSize="@dimen/dimen_12dp"
                                android:background="@drawable/edt_background_border"
                                android:inputType="text"
                                android:hint="Name" />

                            <EditText
                                style="@style/Nohemi_Regular"
                                android:id="@+id/registerNo"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="15dp"
                                android:padding="@dimen/dimen_12dp"
                                android:textSize="@dimen/dimen_12dp"
                                android:background="@drawable/edt_background_border"
                                android:inputType="textCapCharacters"
                                android:hint="Registration Number" />

                            <EditText
                                style="@style/Nohemi_Regular"
                                android:id="@+id/dob"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/dimen_15dp"
                                android:background="@drawable/edt_background_border"
                                android:drawableEnd="@drawable/icon_date_picker"
                                android:fontFamily="@font/space_grotesk"
                                android:hint="Date of Birth"
                                android:inputType="text"
                                android:padding="@dimen/dimen_12dp"
                                android:textSize="@dimen/dimen_12dp" />
                        </LinearLayout>
                    </LinearLayout>




                    <TextView
                        android:id="@+id/nextBtn"
                        style="@style/SpaceGroteskBold"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/topper_button"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/dimen_32dp"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="16sp" />



                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>
    </LinearLayout>
</layout>