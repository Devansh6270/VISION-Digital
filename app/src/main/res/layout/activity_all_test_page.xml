<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".TestSeries.AllTestPageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tbToolBarTestSeries"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_background"
        android:paddingTop="@dimen/dimen_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:elevation="@dimen/dimen_8dp"
            android:src="@drawable/ic_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            style="@style/Nohemi_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/space_grotesk_bold"
            android:text="Test Series"
            android:textColor="@color/white"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbToolBarTestSeries">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBannerImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/test_series_banner"
                app:layout_constraintDimensionRatio="H,3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEntranceExamName"
                style="@style/Nohemi_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="IIT JEE PHYSICS"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBannerImage" />

            <LinearLayout
                android:id="@+id/llClassNameTestNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEntranceExamName">



                <TextView
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" No of Test: "
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvNumberOfTest"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="07"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStartDateEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llClassNameTestNumber">

                <TextView
                    android:id="@+id/tvStartDate"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="23-07-2023"
                    android:textColor="#ee6c4d"
                    android:textSize="12dp" />

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" to "
                    android:textColor="#ee6c4d"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvEndDate"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="30-07-2023"
                    android:textColor="#ee6c4d"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/nsvObjectivePaper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llStartDateEndDate">

                <WebView
                    android:id="@+id/tvDescription"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"

                    android:textSize="14sp"
                    tools:ignore="WebViewLayout" />



            </LinearLayout>



            <TextView
                android:id="@+id/tvCoursePrice"
                style="@style/LogikaNavaRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="Rs 5000"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBannerImage" />

            <TextView
                android:id="@+id/tvBuyNow"
                style="@style/LogikaNavaRegular"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/bg_border_corner"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:text="Buy Now"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/tvCoursePrice"
                app:layout_constraintStart_toStartOf="@id/tvCoursePrice"
                app:layout_constraintTop_toBottomOf="@id/tvCoursePrice" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsvObjectivePaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="42dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llDescription">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTestSeriesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_18dp"
                    tools:listitem="@layout/item_all_test_page" />

            </androidx.core.widget.NestedScrollView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>