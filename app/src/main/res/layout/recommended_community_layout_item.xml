<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemRecommendedCommunity"
    app:cardCornerRadius="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/layout_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:id="@+id/linear_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingLeft="0.8dp"
            android:gravity="center"
            android:paddingRight="0.8dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/communityImageH"
                    android:layout_width="80dp"
                    android:layout_height="78dp"
                    android:layout_margin="@dimen/dimen_4dp"
                    android:src="@drawable/nobita"
                    />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_cardview"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/communityTitleH"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Differential calculus by K.c sinha"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    style="@style/PoppinsRegular"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:minLines="2"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>