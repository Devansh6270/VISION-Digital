<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/institute_card_backgroud"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="16sp"
            android:layout_marginRight="2sp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                app:cardCornerRadius="24dp">

                <ImageView
                    android:id="@+id/teacherImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/button_background"
                    android:src="@drawable/ic_person_black_24dp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anand Kumar"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/institueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Super 30"/>
                <TextView
                    android:id="@+id/subjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Sub: Maths"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginRight="16sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="8sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12sp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/ic_bookmark_white_24dp"/>
            <TextView
                android:id="@+id/subscriber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Subscribers - 7.5K"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>