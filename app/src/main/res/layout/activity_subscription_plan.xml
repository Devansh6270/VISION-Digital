                       android:id="@+id/month_price"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="10dp"
                       android:text="Rs.250/-"
                       android:gravity="end"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       />


               </LinearLayout>
               <LinearLayout
