<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CoursePackage.CoursePackageActivity">

        <RelativeLayout
            android:id="@+id/dashboardToolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/toolbar_background"
            android:paddingTop="@dimen/dimen_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:elevation="8dp"
                android:src="@drawable/ic_back_ios_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/sharButtonCourseDetail"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:background="@drawable/round_shape"
                android:elevation="8dp"
                android:src="@drawable/ic_share" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_below="@+id/dashboardToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="288dp"
                    android:layout_margin="@dimen/dimen_12dp"
                    app:cardCornerRadius="@dimen/dimen_16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/bannerImage"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:scaleType="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/image_banner" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/newchalklogo"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="3dp"
                            app:layout_constraintBottom_toBottomOf="@id/bannerImage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/bannerImage" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/bannerImage">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_16dp"
                                android:layout_marginRight="@dimen/dimen_24dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/courseName"
                                    style="@style/Nohemi_Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="28dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_weight="1"
                                    android:text="Course Name"
                                    android:textColor="#393E59"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/coursePrice"
                                    style="@style/Nohemi_Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="end"
                                    android:text="\u20B9 1500/-"
                                    android:textColor="#393E59"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <com.skyhope.showmoretextview.ShowMoreTextView
                                android:id="@+id/course_des"
                                style="@style/Nohemi_Light"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_16dp"
                                android:layout_marginTop="@dimen/dimen_8dp"
                                android:layout_marginEnd="@dimen/dimen_16dp"
                                android:maxLines="3"
                                android:text="@string/show_more"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/readMoreLess"
                                style="@style/Nohemi_Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="end"
                                android:text="...Read More"
                                android:textColor="#555454"
                                android:textSize="12sp">

                            </TextView>


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/subscribeBtn"
                    style="@style/Nohemi_Bold"
                    android:layout_width="160dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="Buy Now"
                    android:textColor="#fff" />


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/tabCourseLayout"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/colorTabText"
                                style="@style/Nohemi_Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16sp"
                                android:gravity="center"
                                android:text="Courses"
                                android:textColor="#393E59"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/onTabCourses"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_margin="4dp"
                                android:background="@color/themeBlue" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tabTestSeriesLayout"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/colorTabTestSeries"
                                style="@style/Nohemi_Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16sp"
                                android:gravity="center"
                                android:text="Test-Series"
                                android:textColor="#393E59"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/onTabTestSeries"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:background="@color/themeBlue"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tabTestLayout"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/colorTabTest"
                                style="@style/Nohemi_Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16sp"
                                android:gravity="center"
                                android:text="Test"
                                android:textColor="#393E59"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/onTabTest"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:background="@color/themeBlue"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tabLiveLayout"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/colorTabLive"
                                style="@style/Nohemi_Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16sp"
                                android:gravity="center"
                                android:text="Live"
                                android:textColor="#393E59"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/onTabLive"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:background="@color/themeBlue"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tabNotesLayout"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/colorTabNotes"
                                style="@style/Nohemi_Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16sp"
                                android:gravity="center"
                                android:text="Notes"
                                android:textColor="#393E59"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/onTabNote"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:background="@color/themeBlue"
                                android:visibility="gone" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclarViewCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclarViewTestSeries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclarViewTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclarViewLive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclarViewNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</layout>