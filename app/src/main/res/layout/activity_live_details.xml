<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.liveClass.LiveDetailsActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_back_ios_24" />

                <TextView
                    android:id="@+id/toolbarTitleText"
                    style="@style/Nohemi_Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:text="Live Classes"
                    android:textColor="@color/textColor"
                    android:textSize="20dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">





                <TextView
                android:id="@+id/liveClassTitle"
                style="@style/Nohemi_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/space_grotesk_bold"
                android:text="Availability"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                    <TextView
                        android:id="@+id/liveClassActualPrice"
                        style="@style/Nohemi_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        android:text="₹10000"
                        android:foreground="@drawable/bg_strike"
                        android:textColor="#80FF0000"
                        android:textSize="14sp" />


                <TextView
                    android:id="@+id/liveClassSellingPrice"
                    style="@style/Nohemi_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="₹1000"
                    android:textColor="@color/red"
                    android:textSize="14sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/liveStartDateEndDate"
                style="@style/Nohemi_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Oct 10, 2023 to Jun 20, 2024"
                android:textColor="@color/textColor"
                android:textSize="14sp" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/liveCourseImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/image_round_corner"
                android:scaleType="centerCrop"
                android:src="@drawable/img_banner_triangl"
                app:shapeAppearanceOverlay="@style/roundimageview" />



            <TextView
                style="@style/Nohemi_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:text="What you will get in this class?"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

<!--            <TextView-->
<!--                android:id="@+id/liveDescription"-->
<!--                style="@style/LogikaNavaRegular"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:layout_marginEnd="16dp"-->
<!--                android:layout_marginBottom="6dp"-->
<!--                android:text="Covers full GS syllabus for UPSC Prelims &amp; Mains-->
<!--Daily live class on Dikshant Education Learning App-->
<!--Duration: 3 hours _ 6 Days in a week-->
<!--Mode: Live Online-->
<!--Team: Classes by India’s top faculities 1000+ hours. Coverage of complete syllabus. Beginning from the Fundamental level..."-->
<!--                android:textColor="@color/textColor"-->
<!--                android:textSize="14sp" />-->
                <WebView
                    android:id="@+id/liveDescription"
                    style="@style/Nohemi_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="6dp"
                    android:textSize="14sp"
                    tools:ignore="WebViewLayout" />

                <!--Button for Demo and Download Schedule-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnDemoLiveClass"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="24dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/themeBlue"
                        app:cardMaxElevation="2dp">

                        <TextView
                            style="@style/Nohemi_Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:text="Demo"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="12sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnDownloadPdfLiveClass"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="24dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginEnd="@dimen/dimen_8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/themeBlue"
                        app:cardMaxElevation="2dp">

                        <TextView
                            style="@style/Nohemi_Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:text="Download Schedule"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="12sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_16dp"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    android:elevation="@dimen/dimen_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/Nohemi_Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="6dp"
                            android:text="Classes Schedules"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/scheduleClassesName"
                            style="@style/Nohemi_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="Classes Schedules"
                            android:textColor="@color/textColor"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mondayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Mon 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tuesdayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Tue 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/wednesdayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Wed 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/thursdayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Thu 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fridayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Fri 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/saturdayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Sat 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:layout_marginBottom="@dimen/dimen_16dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sundayScheduleTime"
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:visibility="gone"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Sun 05:30 PM - 08:00 PM"
                                android:textColor="@color/textColor"
                                android:background="@drawable/bg_border_corner"
                                android:textSize="10sp" />

                            <TextView
                                style="@style/Nohemi_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/textColor"
                                android:textSize="10sp" />


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>











<!--Button for Buy Now and Class room-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/buyLiveCourseBtn"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="24dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/theme_color_dark"
                        app:cardMaxElevation="2dp">

                        <TextView
                            style="@style/Nohemi_Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:text="Buy Now"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="12sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/classRoomBtn"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginEnd="@dimen/dimen_8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/theme_color_dark"
                        app:cardMaxElevation="2dp">

                        <TextView
                            style="@style/Nohemi_Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:text="Class Room"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="12sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>