<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                style="@style/Nohemi_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Subscribe Now"
                android:textSize="25sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />


            <LinearLayout
                android:id="@+id/duration_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="Duration:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="03:00 hours"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />


            </LinearLayout>

            <EditText
                android:id="@+id/coupon_code_edt_test"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/dimen_16dp"
                android:hint="Enter Coupon code"
                android:padding="@dimen/dimen_6dp"
                android:background="@drawable/edit_text_background" />


            <TextView
                android:id="@+id/couponMsgTest"
                style="@style/PoppinsRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="-16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:text="Subscribe Now"
                android:textSize="12sp" />

            <TextView
                style="@style/Nohemi_Medium"
                android:id="@+id/btnApplyCoupon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/underMaintananceContent"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:background="@drawable/topper_button"
                android:paddingLeft="24dp"
                android:paddingTop="4dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                android:text="Apply Coupon"
                android:textColor="#fff"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/priceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                style="@style/PoppinsRegular"
                android:layout_marginBottom="-16dp"
                android:text="Subscribe this course for 1 months in just \u20b9 300."
                android:textColor="@color/blue" />

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="10dp"
                android:background="@drawable/edit_text_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="Price:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/initial_price_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:text="Rs.250/-"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/coupon_value_layout_linear_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="Coupon Value:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/coupon_price_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:text="Rs.250/-"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sub_total_linear_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="Sub Total:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/sub_total_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:text="Rs.250/-"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/gst_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="GST:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/total_gst_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:text="Rs.250/-"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />


                </LinearLayout>


                <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    android:layout_marginTop="2dp"
                    android:outlineAmbientShadowColor="@color/black"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="Total Price:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalPriceTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:text="Rs.250/-"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/Nohemi_Medium"
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/underMaintananceContent"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:gravity="center"
                android:background="@drawable/topper_button"
                android:paddingLeft="24dp"
                android:paddingTop="4dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                android:text="Pay and Subscribe"
                android:textColor="#fff"
                android:textSize="18dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>