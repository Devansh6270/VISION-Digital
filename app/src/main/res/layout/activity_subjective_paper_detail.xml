<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestSeries.SubjectivePaperDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvToolBarTestSeries"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_back_ios_24" />

            <TextView
                android:id="@+id/toolbarTitleText"
                style="@style/LogikaNavaBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:fontFamily="@font/space_grotesk_bold"
                android:text="Test Series"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/svSubjectivePaperContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/cvToolBarTestSeries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/coursesImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:background="@drawable/image_round_corner"
            android:scaleType="centerCrop"
            android:src="@drawable/img_banner_triangl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ImageView.BottomCorner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameOfTest"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name Of Test"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_18dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_4dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Duration: "
                        android:textSize="@dimen/dimen_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 hrs"
                        android:textSize="@dimen/dimen_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | Mode: "
                        android:textSize="@dimen/dimen_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:id="@+id/tvMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" offline"
                        android:textSize="@dimen/dimen_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | Medium: "
                        android:textSize="@dimen/dimen_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:id="@+id/tvMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textSize="@dimen/dimen_8dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvViewTestPaper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    app:cardCornerRadius="@dimen/dimen_16dp"
                    app:cardElevation="@dimen/dimen_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_16dp"
                        android:background="@drawable/bg_subjective_paper_cardview"
                        android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_4dp"
                        android:src="@drawable/test_passed"
                        android:layout_gravity="center"/>

                    <TextView
                        style="@style/LogikaNavaRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_4dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Click below button to view the test paper pdf"/>

                        <TextView
                            android:id="@+id/btnViewTestPaper"
                            style="@style/LogikaNavaRegular"
                            android:layout_width="140dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="28dp"
                            android:text="View Test Paper"
                            android:background="@drawable/bg_border_corner"
                            android:backgroundTint="@color/red"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvUploadAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_16dp"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    app:cardElevation="@dimen/dimen_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_16dp"
                        android:background="@drawable/bg_subjective_paper_cardview"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:src="@drawable/arrow_upload"
                            android:layout_gravity="center"/>

                        <TextView
                            style="@style/LogikaNavaRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Upload your answer sheet"/>

                        <TextView
                            android:id="@+id/btnUploadAnswer"
                            style="@style/LogikaNavaRegular"
                            android:layout_width="140dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="28dp"
                            android:text="Upload Answer"
                            android:background="@drawable/bg_border_corner"
                            android:backgroundTint="@color/red"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvResult"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_16dp"
                    app:cardElevation="@dimen/dimen_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_16dp"
                        android:background="@drawable/bg_subjective_paper_cardview"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:src="@drawable/education"
                            android:layout_gravity="center"/>

                        <TextView
                            style="@style/LogikaNavaRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Get your result from here"/>

                        <TextView
                            android:id="@+id/btnResult"
                            style="@style/LogikaNavaRegular"
                            android:layout_width="140dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="28dp"
                            android:text="Result"
                            android:background="@drawable/bg_border_corner"
                            android:backgroundTint="@color/red"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSolution"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_16dp"
                    app:cardElevation="@dimen/dimen_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_16dp"
                        android:background="@drawable/bg_subjective_paper_cardview"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:src="@drawable/icons_solution"
                            android:layout_gravity="center"/>

                        <TextView
                            style="@style/LogikaNavaRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Get your solution from here"/>

                        <TextView
                            android:id="@+id/btnSoln"
                            style="@style/LogikaNavaRegular"
                            android:layout_width="140dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="28dp"
                            android:text="Solution"
                            android:background="@drawable/bg_border_corner"
                            android:backgroundTint="@color/red"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

    </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>