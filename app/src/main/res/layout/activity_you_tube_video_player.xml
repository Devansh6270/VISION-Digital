<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.videoPlayer.YouTubeVideoPlayerActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbarPlayer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="0dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_ios_24"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:id="@+id/videoTitleToolbar"
                style="@style/Nohemi_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:fontFamily="@font/space_grotesk_bold"
                android:text=""
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:enableAutomaticInitialization="false"
        android:layout_below="@id/toolbarPlayer"
        android:clickable="false"/>

    <TextView
        android:id="@+id/videoTitle"
        style="@style/Nohemi_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtube_player_view"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <WebView
        android:id="@+id/videoDescription"
        style="@style/Nohemi_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text=""
        android:textColor="@color/textColor"
        android:maxLines="8"
        android:layout_below="@id/videoTitle"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/chattingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/videoDescription"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginBottom="@dimen/dimen_60dp"
            android:layout_margin="8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="8dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="82dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/chat_edittext_background"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="2">




            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:background="@null"
                android:hint="Write a message..."
                android:maxLines="5"
                android:padding="10dp"
                android:textSize="12dp" />




            <ImageView
                android:id="@+id/sendBtn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                android:src="@drawable/ic_send_black_24dp"
                app:tint="@color/colorPrimary" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:fabSize="normal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_doubt_icon_" />

</RelativeLayout>