<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_notes_package"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:src="@drawable/ic_book" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:background="@color/pie_chart_red"
            />

        <TextView
            android:id="@+id/itemNotesName"
            style="@style/Nohemi_Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Name of the Notes "
            android:textColor="#393E59"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/openBtn"
            style="@style/Nohemi_Bold"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_marginLeft="4dp"
            android:text="Open"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/lockedBtn"
            style="@style/Nohemi_Bold"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="@drawable/lock_background_btn"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:scaleType="center"
            android:paddingRight="16dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_marginLeft="4dp"
            android:visibility="gone"
            android:src="@drawable/ic_lock"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>