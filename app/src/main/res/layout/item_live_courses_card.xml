<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:id="@+id/courseCard"
    android:layout_margin="@dimen/dimen_8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/liveCourseImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/img_banner_books"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/liveCourseTitle"
            style="@style/Nohemi_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Studies Foundation..."
            android:maxLines="1"
            android:layout_margin="@dimen/dimen_8dp"
            android:textSize="12sp"
            android:textColor="@color/darkGreyColor"/>

        <TextView
            android:id="@+id/startDateEndDateText"
            style="@style/Nohemi_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oct 10, 2023 - Jun 20, 2024"
            android:maxLines="1"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="11sp"
            android:textColor="@color/grey"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>