<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_clip_path_group"
    android:orientation="vertical"
    tools:context=".signUp.OTPActivity">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_clip_path_group" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0FFF212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/backBtn"
        android:elevation="8dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_back_ios_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="88dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/vision_logo"/>


        <TextView
            style="@style/Nohemi_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Enter Your Verification Code"
            android:textColor="#393e59"
            android:textSize="16sp" />

        <TextView
            style="@style/SpaceGroteskLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="We have sent 6 digits OTP to below Mobile Number."
            android:textColor="#6E6E6E" />

        <TextView
            android:id="@+id/sendingOTPOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="+91-9079298775"
            android:textSize="15sp"
            style="@style/Nohemi_Medium"
            android:textColor="#6E6E6E" />

        <com.chaos.view.PinView
            android:id="@+id/otpView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:cursorVisible="true"
            android:hint=""
            android:gravity="center"
            android:inputType="number"
            android:padding="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:cursorWidth="0dp"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemHeight="46dp"
            app:itemRadius="6dp"
            app:itemSpacing="40dp"
            app:itemWidth="46dp"
            app:lineColor="#D9D9D9"
            app:lineWidth="2dp"
            android:itemBackground="@drawable/edit_text_background"
            app:viewType="rectangle" />



        <TextView
            android:id="@+id/btnOTPVerification"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/topper_button"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_18sp"
            android:text="Verify"
            android:textAlignment="center"
            android:textColor="#ffffff"
            style="@style/SpaceGroteskBold" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider"
                android:layout_width="150dp"
                android:layout_height="1.5dp"
                android:layout_marginRight="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PoppinsRegular"
                android:text="OR"
                android:paddingTop="3dp"
                android:textColor="@color/colorText"
                />

            <View
                android:id="@+id/divider1"
                android:layout_width="150dp"
                android:layout_height="1.5dp"
                android:layout_marginLeft="8dp"
                android:background="?android:attr/listDivider" />
        </androidx.appcompat.widget.LinearLayoutCompat>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Nohemi_Light"
                android:text="Didn't receive?"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/resendVerificationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Nohemi_Bold"
                android:text=" RESEND"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>



    </LinearLayout>


    </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>