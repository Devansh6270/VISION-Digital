<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dimen_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="#ffffff"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4dp">

        <TextView
            android:id="@+id/tvInstallmentNumber"
            style="@style/Nohemi_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="1st Installment"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvDueDate"
            style="@style/Nohemi_Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minLines="1"
            android:textStyle="bold"
            android:text="Pay by 20th of November"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvInstallmentNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvInstallmentNumber" />

        <!--        <ImageView-->
        <!--            android:elevation="8dp"-->
        <!--            android:layout_width="51dp"-->
        <!--            android:layout_height="51dp"-->
        <!--            android:background="@drawable/round_shape"-->
        <!--            android:src="@drawable/ic_callender"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            android:layout_marginStart="@dimen/dimen_8dp"-->
        <!--            android:layout_marginTop="@dimen/dimen_8dp"-->
        <!--            android:layout_marginEnd="@dimen/dimen_12dp"-->
        <!--            android:layout_marginBottom="@dimen/dimen_8dp"-->
        <!--            />-->


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/calendarImage"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:contentDescription="TODO"
                android:elevation="8dp"
                android:src="@drawable/ic_callender" />

<!--            <TextView-->
<!--                android:id="@+id/tvDate"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:maxLines="1"-->
<!--                android:minLines="1"-->
<!--                tools:text="20th"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="16sp"-->
<!--                android:visibility="visible" />-->


        </FrameLayout>

        <TextView
            style="@style/Nohemi_Bold"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="1"
            android:minLines="1"
            tools:text="20"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDueDate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Nohemi_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="Amount"
                        android:textColor="@color/themeBlue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/Nohemi_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="\u20B9 16000/-"
                        android:textColor="@color/themeBlue"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Nohemi_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="Pending Amount"
                        android:textColor="@color/themeBlue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvPendingAmount"
                        style="@style/Nohemi_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="\u20B9 0/-"
                        android:textColor="@color/themeBlue"
                        android:textSize="16sp" />


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnInstallmentDetails"
                    style="@style/Nohemi_Bold"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@drawable/course_button"
                    android:text="Details"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnPay"
                    style="@style/Nohemi_Bold"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@drawable/course_button"
                    android:text="Pay"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </RelativeLayout>



        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>