<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/SpaceGroteskBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congratulations"
                android:gravity="center"
                android:textSize="28sp"
                android:layout_marginTop="16dp"
                />
            <TextView
                style="@style/SpaceGroteskLight"
                android:id="@+id/underMaintananceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Subscribed Successfully"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                style="@style/SpaceGroteskBold"
                android:id="@+id/duration_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration : 1 Month"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                style="@style/SpaceGroteskBold"
                android:id="@+id/btnOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn Now"
                android:background="@drawable/button_background"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/underMaintananceContent"
                android:layout_margin="16dp"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="18sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>