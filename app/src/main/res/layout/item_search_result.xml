<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8sp"
        android:elevation="3dp"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
<!--        <ImageView-->
<!--            android:id="@+id/fullImage"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="80sp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/live_class_blue_background"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="4dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/searchResultImage"
                    android:layout_width="130sp"
                    android:layout_height="100dp"
                    android:src="@drawable/live_class_blue_background"
                    android:scaleType="fitXY"
                    android:paddingBottom="-10dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/searchTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginLeft="8sp"
                        style="@style/Nohemi_Bold"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:layout_weight="3"
                        android:textColor="#000000"
                        android:text="Title"/>

                    <TextView
                        android:id="@+id/title_dots"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:layout_marginRight="3dp"
                        android:visibility="invisible"
                        android:textColor="@color/colorPrimary"
                        android:text="..."/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/duration_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="8dp"
                        app:tint="@color/colorPrimary"
                        android:src="@drawable/duration"/>
                    <TextView
                        android:id="@+id/duration_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        style="@style/DmSansRegular"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="4sp"
                        android:text="type"/>


                </LinearLayout>



                <TextView
                    android:id="@+id/ownedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="4dp"
                    android:text="by: K.C. Sinha"
                    android:textSize="14dp"
                    style="@style/Nohemi_Regular"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="8sp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="by: K.C. Sinha"
                        style="@style/Nohemi_Regular"
                        android:textSize="12dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8sp"
                        android:layout_marginBottom="4dp"
                        android:maxLines="1"
                        android:layout_weight="2"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/title_dots_desc"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:layout_marginRight="3dp"
                        android:visibility="invisible"
                        android:textColor="@color/colorPrimary"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>