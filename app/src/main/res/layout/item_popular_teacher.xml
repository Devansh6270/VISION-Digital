<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/teacherLinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/teacherImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/image_round_corner"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:src="@drawable/nobita"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="2sp"
            android:orientation="horizontal">

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="48dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_gravity="center"-->
<!--                app:cardCornerRadius="24dp">-->

<!--                <ImageView-->
<!--                    android:id="@+id/teacherImg"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@drawable/button_background"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    android:src="@drawable/ic_person_black_24dp" />-->

<!--            </androidx.cardview.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Nohemi_Regular"
                    android:id="@+id/teacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minakshi Graak"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/institueName"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super 30" />

                <TextView
                    android:id="@+id/subjectName"
                    style="@style/Nohemi_Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub: Maths .."
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorText" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12sp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/ic_bookmark_black_24dp" />

            <TextView
                android:id="@+id/subscriber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscribers - 7.5K" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>