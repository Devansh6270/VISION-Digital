<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="5dp"
    android:layout_marginEnd="@dimen/dimen_4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4dp"
        android:background="@drawable/msg_receive_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/msg_receive_drawable"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="  Hello Sir"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/message"
           app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/dimen_4dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/LogikaNavaLight"
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nihal"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:background="@color/white"/>

            <TextView
                style="@style/LogikaNavaLight"
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.12PM"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:id="@+id/feelings"
        android:layout_width="23dp"
        android:layout_height="37dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/messageLayout"
        app:layout_constraintEnd_toEndOf="@+id/messageLayout"
        app:layout_constraintStart_toEndOf="@+id/messageLayout"
        app:layout_constraintTop_toTopOf="@+id/messageLayout"
        app:srcCompat="@drawable/like" />
</androidx.constraintlayout.widget.ConstraintLayout>