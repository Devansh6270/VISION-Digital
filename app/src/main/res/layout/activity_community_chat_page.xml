<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pagebackgroundblue"
    tools:context=".community.CommunityChatPageActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/back_button" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/community_logo_chat"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:src="@drawable/nobita" />

            <TextView
                android:id="@+id/community_name_chat"
                style="@style/PoppinsSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Mathematics"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/chat_invitation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_community_invite"
                app:tint="@color/colorPrimary" />


            <ImageView
                android:id="@+id/menu_chat"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_more_vert_white_24dp"
                app:tint="@color/colorPrimary" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:background="@color/pagebackgroundblue"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:paddingBottom="8dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="@dimen/dimen_8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/chat_send_image"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/nobita"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/chat_send_image_close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_close_black_24dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimaryDark" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:elevation="4dp"
            app:cardCornerRadius="7dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/edtTxtReplyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#EA8888" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edtTxtReplyUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="Devashish"
                            android:textColor="#EA8888"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/chat_reply_cancel_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_close_black_24dp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/edtTxtReply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="Hello, how are you?"
                        android:textSize="12sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/messageEdt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <!--            <androidx.cardview.widget.CardView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="2dp"-->
            <!--                android:layout_marginRight="2dp"-->
            <!--                android:layout_marginBottom="2dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:background="@drawable/chat_edittext_background"-->
            <!--                app:cardCornerRadius="16dp">-->

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/chat_edittext_background"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:padding="2dp"
                    android:src="@drawable/ic_chat_plus" />


                <EditText
                    android:id="@+id/edtTxtSms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="Write a message..."
                    android:maxLines="5"
                    android:padding="10dp"
                    android:textSize="12dp" />


                <ImageView
                    android:id="@+id/cancelAudio"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:visibility="gone"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/btndoubtSms"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:padding="2dp"
                    android:src="@drawable/ic_doubt_icon_"
                    app:tint="@color/colorPrimary" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--        </androidx.cardview.widget.CardView>-->


            <TextView
                android:id="@+id/btnSendSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="Send"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>


        <!--        </LinearLayout>-->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/attachment_file_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edtTxtReplyLayout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="NotSibling">

        <ImageView
            android:id="@+id/chat_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_camera_icon" />

        <ImageView
            android:id="@+id/chat_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_gallery_icon" />

        <ImageView
            android:id="@+id/chat_doc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_group_91" />


        <ImageView
            android:id="@+id/chat_mic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic_on"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/chat_mic_off"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_mic_off"
            android:visibility="gone" />


    </LinearLayout>
</RelativeLayout>