<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AllLiveClassActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_ios_24"/>


            <TextView
                style="@style/Nohemi_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dimen_18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:orientation="vertical">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/liveClassList"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:visibility="visible"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_height="match_parent"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieEmptyBox"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/empty_box" />

            <TextView
                android:id="@+id/tvNoLiveClasses"
                style="@style/Nohemi_Bold"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No live classes available yet !!"
                android:gravity="center_horizontal"/>



        </LinearLayout>


    </RelativeLayout>
</layout>