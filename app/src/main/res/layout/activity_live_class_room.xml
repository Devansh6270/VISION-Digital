    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.liveClass.LiveClassRoomActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back_ios_24"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="16dp"
                    />

                <TextView
                    style="@style/Nohemi_Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:text="Class Room"
                    android:textColor="@color/textColor"
                    android:textSize="21sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/bg_grey_round_button"
            android:orientation="horizontal">

            <TextView
                style="@style/Nohemi_Bold"
                android:id="@+id/loginButtonLog"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Recent Classes"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:background="@drawable/bg_red_round_button"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/classRoomContentBtn"
                style="@style/Nohemi_Bold"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Classroom Content"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recentClassLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_margin="@dimen/dimen_16dp"
                android:id="@+id/datesRecyclarView"/>

            <TextView
                android:id="@+id/noDateAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_24dp"
                android:text="No Classes have been scheduled for today"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/dimen_16dp"
                tools:listitem="@layout/item_play_live_class"
                android:id="@+id/liveClassCardRecyclarView"/>
        </LinearLayout>

