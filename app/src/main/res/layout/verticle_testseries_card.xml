<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="218dp"
    android:clickable="true"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/dimen_4dp"
    android:id="@+id/itemLiveClass"
    app:cardCornerRadius="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:background="@color/white"
        android:elevation="@dimen/dimen_3dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/verticleCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/verticle_testseries_card_background_blue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/freeImg"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:src="@drawable/free_logo"
                    android:layout_marginLeft="-4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/live_lottie_anim"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/dimen_16dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#C6D6FE"
                    app:lottie_autoPlay="true"
                    app:lottie_repeatMode="restart"
                    android:layout_marginRight="@dimen/dimen_7dp"
                    app:lottie_rawRes="@raw/live_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="37dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="24dp">

                        <ImageView
                            android:id="@+id/testImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            />

                    </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/testTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:layout_marginTop="2dp"
                    android:text="NEET Syllabus 2020 -MATHS"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:lineHeight="@dimen/dimen_18dp"
                    android:minLines="2"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:maxLines="2"
                    style="@style/SpaceGroteskBold" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dimen_6dp"
                        android:layout_marginEnd="@dimen/dimen_6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/instituteName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parmanu Classes"
                            android:maxLines="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen_6dp"
                            android:textSize="11dp"
                            style="@style/SpaceGroteskLight"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration- 00:45 Hrs"
                            android:maxLines="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="9dp"
                            style="@style/SpaceGroteskLight"
                            android:textColor="@color/white" />


                    </LinearLayout>





                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/startBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_6dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:outlineAmbientShadowColor="#006DD9"
                    android:outlineSpotShadowColor="#006DD9">

                    <TextView
                        android:id="@+id/startButton"
                        android:layout_width="89dp"
                        android:layout_height="24dp"
                        android:text="START"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="8dp"
                        style="@style/Nohemi_Medium"
                        android:textColor="#ffffff" />
                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>