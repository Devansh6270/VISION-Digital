<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/pagebackgroundblue"
        tools:context=".profile.ProfileActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:elevation="5dp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:paddingBottom="3dp">

                <RelativeLayout
                    android:id="@+id/profileToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:outlineAmbientShadowColor="@color/colorPrimary"
                    android:outlineSpotShadowColor="@color/colorPrimary"

                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/profile_back_btn"
                        android:elevation="8dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/round_shape"
                        android:src="@drawable/ic_back"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp" />


                    <RelativeLayout
                        android:id="@+id/profile_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_more_vert_white_24dp"
                            app:tint="@color/colorPrimary" />


                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@mipmap/ic_launcher_round"

                        />

                    <!--              app:civ_border_color="#FF000000"
     app:civ_border_width="2dp"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_name"
                            style="@style/Nohemi_Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/profile_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:gravity="center"
                            android:text="Username"
                            style="@style/Nohemi_Regular"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear_layout"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="5dp">

                            <TextView
                                android:id="@+id/total_tests"
                                style="@style/SpaceGroteskBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingTop="0dp"
                                android:paddingRight="16dp"
                                android:text="Tests"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                style="@style/Nohemi_Regular" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="5dp">

                            <TextView
                                android:id="@+id/total_courses"
                                style="@style/SpaceGroteskBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Nohemi_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingTop="0dp"
                                android:paddingRight="16dp"
                                android:text="Courses"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:paddingBottom="5dp">


                            <TextView
                                android:id="@+id/total_communities"
                                style="@style/SpaceGroteskBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/SpaceGroteskLight"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingTop="0dp"
                                android:paddingRight="16dp"
                                android:text="Community"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_layout"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ScrollView
                        android:id="@+id/topResultList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_marginTop="8dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">





                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginBottom="3dp"
                                    android:elevation="3dp"
                                    android:outlineAmbientShadowColor="@color/colorPrimary"
                                    android:outlineSpotShadowColor="@color/colorPrimary"
                                    app:cardCornerRadius="0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_editor_absoluteX="8dp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="16dp"
                                        android:paddingRight="16dp"
                                        android:visibility="gone"
                                        android:paddingBottom="20dp">

                                        <TextView
                                            android:id="@+id/textView2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Profile: "
                                            android:visibility="gone"
                                            android:textColor="@color/black"
                                            android:textSize="16dp"
                                            style="@style/SpaceGroteskBold"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/email_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="16dp"
                                            android:text="Email: "
                                            android:visibility="gone"
                                            style="@style/Nohemi_Medium"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/mob_title"
                                            style="@style/Nohemi_Medium"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Mobile No: "
                                            android:layout_marginTop="6dp"

                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            app:layout_constraintHorizontal_bias="0.0"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/email_title" />




                                        <TextView
                                            android:id="@+id/profile_email"
                                            style="@style/Nohemi_Regular"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="6dp"
                                            android:text=""
                                            android:textSize="15sp"
                                            android:maxLines="1"
                                            app:layout_constraintBottom_toBottomOf="@+id/email_title"
                                            app:layout_constraintStart_toEndOf="@+id/email_title"
                                            app:layout_constraintTop_toBottomOf="@+id/divider6" />

                                        <TextView
                                            android:id="@+id/profile_mobile"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="6dp"
                                            android:text=""
                                            style="@style/Nohemi_Regular"
                                            android:textSize="15sp"
                                            app:layout_constraintBottom_toBottomOf="@+id/mob_title"
                                            app:layout_constraintStart_toEndOf="@+id/mob_title"
                                            app:layout_constraintTop_toBottomOf="@+id/profile_email" />

                                        <TextView
                                            android:id="@+id/dob_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Date of Birth: "
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            style="@style/Nohemi_Medium"
                                            app:layout_constraintStart_toStartOf="@+id/mob_title"
                                            app:layout_constraintTop_toBottomOf="@+id/mob_title" />

                                        <TextView
                                            android:id="@+id/profile_dob"
                                            style="@style/SpaceGroteskLight"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text=""
                                            android:textSize="15sp"
                                            app:layout_constraintBottom_toBottomOf="@+id/dob_title"
                                            app:layout_constraintStart_toEndOf="@+id/dob_title"
                                            app:layout_constraintTop_toTopOf="@+id/dob_title"
                                            app:layout_constraintVertical_bias="1.0" />

                                        <TextView
                                            android:id="@+id/gender_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Gender: "
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            style="@style/Nohemi_Medium"
                                            app:layout_constraintStart_toStartOf="@+id/dob_title"
                                            app:layout_constraintTop_toBottomOf="@+id/dob_title" />

                                        <TextView
                                            android:id="@+id/profile_gender"
                                            style="@style/SpaceGroteskLight"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text=""
                                            android:textSize="15sp"
                                            app:layout_constraintBottom_toBottomOf="@+id/gender_title"
                                            app:layout_constraintStart_toEndOf="@+id/gender_title"
                                            app:layout_constraintTop_toBottomOf="@+id/profile_dob" />

                                        <LinearLayout
                                            android:id="@+id/learnerCode"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:visibility="gone"
                                            app:layout_constraintTop_toBottomOf="@+id/gender_title"
                                            tools:layout_editor_absoluteX="16dp">

                                            <TextView
                                                android:id="@+id/school_title"
                                                style="@style/SpaceGroteskBold"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:text="Learner Code: "
                                                android:textColor="@color/black"
                                                android:textSize="16sp"
                                                app:layout_constraintStart_toStartOf="@+id/gender_title"
                                                app:layout_constraintTop_toBottomOf="@+id/gender_title" />

                                            <TextView
                                                android:id="@+id/profile_learner_code"
                                                style="@style/SpaceGroteskLight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left|center_vertical"
                                                android:maxLines="3"
                                                android:singleLine="false"
                                                android:text=""
                                                android:textSize="15sp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintHorizontal_bias="0.0"
                                                app:layout_constraintStart_toEndOf="@+id/school_title"
                                                app:layout_constraintTop_toBottomOf="@+id/profile_sex" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/linearLayout4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            app:layout_constraintTop_toBottomOf="@+id/learnerCode"
                                            tools:layout_editor_absoluteX="16dp">

                                            <TextView
                                                android:id="@+id/type_title"
                                                style="@style/SpaceGroteskBold"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:text="Type: "
                                                android:visibility="gone"
                                                android:textColor="@color/black"
                                                android:textSize="16sp"
                                                app:layout_constraintStart_toStartOf="@+id/gender_title"
                                                app:layout_constraintTop_toBottomOf="@+id/gender_title" />

                                            <TextView
                                                android:id="@+id/profile_type"
                                                style="@style/SpaceGroteskLight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left|center_vertical"
                                                android:maxLines="3"
                                                android:singleLine="false"
                                                android:text=""
                                                android:visibility="gone"
                                                android:textSize="15sp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintHorizontal_bias="0.0"
                                                app:layout_constraintStart_toEndOf="@+id/school_title"
                                                app:layout_constraintTop_toBottomOf="@+id/profile_sex" />

                                            <com.airbnb.lottie.LottieAnimationView
                                                android:id="@+id/noDataFound"
                                                android:layout_width="match_parent"
                                                android:layout_height="400dp"
                                                android:visibility="gone"
                                                app:lottie_autoPlay="true"
                                                app:lottie_rawRes="@raw/no_data_found"
                                                app:lottie_repeatMode="restart" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/grade"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:visibility="gone"
                                            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                                            tools:layout_editor_absoluteX="16dp">

                                            <TextView
                                                android:id="@+id/grade_title"
                                                style="@style/SpaceGroteskBold"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:text="Grade: "
                                                android:textColor="@color/black"
                                                android:textSize="16sp"
                                                app:layout_constraintStart_toStartOf="@+id/gender_title"
                                                app:layout_constraintTop_toBottomOf="@+id/gender_title" />

                                            <TextView
                                                android:id="@+id/profile_grade"
                                                style="@style/SpaceGroteskLight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left|center_vertical"
                                                android:maxLines="3"
                                                android:singleLine="false"
                                                android:text=""
                                                android:textSize="15sp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintHorizontal_bias="0.0"
                                                app:layout_constraintStart_toEndOf="@+id/school_title"
                                                app:layout_constraintTop_toBottomOf="@+id/profile_sex" />
                                        </LinearLayout>















                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>

                            </FrameLayout>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardDetails1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:elevation="5dp"
                                android:outlineAmbientShadowColor="@color/colorPrimary"
                                android:outlineSpotShadowColor="@color/colorPrimary"
                                app:cardCornerRadius="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:layout_editor_absoluteX="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/my_course_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="My Courses"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        style="@style/Nohemi_Bold" />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/total_course"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </ScrollView>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>


    </RelativeLayout>
</layout>