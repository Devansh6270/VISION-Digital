<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTestSeriesCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_12dp"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImageTitle"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vision_logo" />

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:text="Test Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="No. of Test:"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:id="@+id/tvNoOfTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="12 total test"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Start time :"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:id="@+id/tvTestStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="12:00"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="End time :"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:id="@+id/tvTestEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="02:00"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:id="@+id/tvActualPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:background="@drawable/bg_strike"
                    android:text="Rs 300"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint=":"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:id="@+id/tvSellingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Rs 250"
                    android:textSize="@dimen/dimen_12dp"
                    android:layout_margin="@dimen/dimen_4dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/LogikaNavaRegular"
                    android:id="@+id/btnTestSchedule"
                    android:layout_width="140dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="Test Schedule"
                    android:background="@drawable/bg_border_corner"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/viewDetailsBtn"/>

                <TextView
                    android:id="@+id/viewDetailsBtn"
                    style="@style/LogikaNavaRegular"
                    android:layout_width="140dp"
                    android:layout_marginLeft="@dimen/dimen_24dp"
                    android:gravity="center"
                    android:layout_height="28dp"
                    android:text="View Details"
                    android:background="@drawable/bg_border_corner"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/btnTestSchedule"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/cvTestSeriesCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>